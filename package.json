{
  "name": "ts2workflows",
  "version": "0.1.0",
  "description": "Transpile Typescript code to GCP Workflows programs",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "rimraf dist && tsc && npm run build:typeannotations",
    "build:typeannotations": "copyfiles copyfiles -u 2 src/typeannotations/*.d.ts dist/typeannotations/",
    "lint": "eslint .",
    "format": "prettier . --write",
    "test": "mocha"
  },
  "files": [
    "dist",
    "README",
    "language_reference.md",
    "LICENSE"
  ],
  "author": "Antti Ajanki",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "chai": "^5.1.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "mocha": "^10.4.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "tsx": "^4.10.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.0.0"
  },
  "dependencies": {
    "@typescript-eslint/typescript-estree": "^8.0.0",
    "commander": "^12.1.0",
    "yaml": "^2.4.2"
  }
}
